<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <!-- Verbose errors are cool -->
    <constant name="struts.devMode" value="true" />

    <bean name="user"
          class="me.seng3150.User"
          scope="default" />

    <package name="default" extends="struts-default">
        <action name="home">
            <result>/WEB-INF/jsp/home.jsp</result>
        </action>

        <action name="login">
            <result>/WEB-INF/jsp/login.jsp</result>
        </action>

        <action name="signup">
            <result>/WEB-INF/jsp/signUp.jsp</result>
        </action>

        <action name="survey">
            <result>/WEB-INF/jsp/survey.jsp</result>
        </action>

        <action name="survey-submit" class="me.seng3150.actions.SurveyAction">
            <result name="success" type="redirect">offers</result>
            <result name="input" type="redirect">survey</result>
        </action>

    </package>

    <package name="packages" extends="struts-default">

        <interceptors>
            <interceptor name="survey" class="me.seng3150.interceptors.SurveryInterceptor" />
            <interceptor-stack name="surveyStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="survey"/>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="surveyStack"/>

        <!-- TODO: Global result for survey-->
        <global-results>
            <result name="surveyrequired" type="redirect">survey</result>
        </global-results>

        <action name="profile">
            <result>/WEB-INF/jsp/profile.jsp</result>
        </action>

        <action name="offers">
            <result>/WEB-INF/jsp/offers.jsp</result>
        </action>

        <action name="offerDetails">
            <result>/WEB-INF/jsp/offerDetails.jsp</result>
        </action>

        <action name="pay">
            <result>/WEB-INF/jsp/pay.jsp</result>
        </action>
    </package>

    <package name="management" extends="struts-default">

        <!-- TODO: Global result for non-staff and interceptors -->
        <!-- <global-results>
            <result name="stafflogin" type="dispatcher">/WEB-INF/jsp/staffLogin.jsp</result>
        </global-results> -->

        <action name="management">
            <result>/WEB-INF/jsp/management.jsp</result>
        </action>
    </package>

</struts>